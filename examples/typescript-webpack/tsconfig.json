{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": false,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "lib": ["dom", "es2020"],
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"]
}
